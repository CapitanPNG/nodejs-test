<!doctype html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Chatfit TEST - Users Management</title>

    <!-- jQuery -->
    <script src="/scripts/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/styles/bootstrap/bootstrap.min.css">
    <script src="/scripts/bootstrap/bootstrap.bundle.min.js"></script>

    <!-- Styles -->
    <link rel="stylesheet" href="/styles/styles.css">

    <!-- Password-Viewer -->
    <script src="/scripts/password-viewer.js"></script>

    <!-- Page Script -->
    <script src="/scripts/pages/users-management.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-5">
        <a class="navbar-brand" href="#">TEST</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item dropdown">
              <div class="dropdown">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                <%= userData.account.email %>
                </button>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="/profile">Profilo</a></li>

                  <% if (userData.account.isAdmin) { %>
                    <li><a class="dropdown-item" href="/users-management">Gestione utenti</a></li>
                  <% } %>

                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="/logout">Disconnetti</a></li>
                </ul>
              </div>
            </li>
          </ul>
        </div>
    </nav>
    <div class="container d-flex justify-content-center">
      <% if (baseUsers.length > 0) { %>
        <table class="table">
            <thead>
                <tr>
                <th scope="col">Utenti Base</th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < baseUsers.length; i++) { %>
                    <tr>
                    <td><%= baseUsers[i]['email'] %></td>
                    <td>
                        <div class="d-flex justify-content-end">
                            <a class="btn btn-primary" href="/users-management/<%= baseUsers[i]['id'] %>" role="button" style="width: 120px;">Modifica</a>
                            <button type="button" class="btn btn-danger button ms-3 btn-delete-account" value="<%= baseUsers[i]['id'] %>" style="width: 120px;">Elimina</button>
                        </div>
                    </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
      <% } else { %>
        <div class="alert alert-primary mt-5" role="alert" style="padding: 10px 30px;">
          Non esistono utenti di base
        </div>
      <% } %>
    </div>
</body>
</html>