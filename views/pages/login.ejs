<!doctype html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Chatfit TEST - Login</title>

    <!-- jQuery -->
    <script src="/scripts/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/styles/bootstrap/bootstrap.min.css">
    <script src="/scripts/bootstrap/bootstrap.bundle.min.js"></script>

    <!-- Styles -->
    <link rel="stylesheet" href="/styles/styles.css">

    <!-- Password-Viewer -->
    <script src="/scripts/password-viewer.js"></script>

    <!-- Page Script -->
    <script src="/scripts/pages/login.js"></script>
</head>
<body>
    <div class="container d-flex justify-content-center">
        <form class="needs-validation" id="login-form" method="post" novalidate>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="input form-control" id="email" name="email" placeholder="Email" value="">
                <div class="invalid-feedback"></div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="input-group mb-3">
                    <input type="password" class="input form-control" id="password" name="password" placeholder="Password" value="">
                    <button class="btn btn-outline-secondary password-viewer" type="button">SHOW</button>
                    <div class="invalid-feedback"></div>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-3 mb-3">
                <button type="submit" class="btn btn-primary button">Accedi</button>
            </div>
            <div class="d-flex justify-content-center">
                <a href="/registration">Registrati</a>
            </div>
        </form>
    </div>
</body>
</html>