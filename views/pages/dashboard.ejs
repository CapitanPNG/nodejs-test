<!doctype html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Chatfit TEST - Dashboard</title>

    <!-- jQuery -->
    <script src="/scripts/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/styles/bootstrap/bootstrap.min.css">
    <script src="/scripts/bootstrap/bootstrap.bundle.min.js"></script>

    <!-- Styles -->
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-5">
        <a class="navbar-brand" href="#">TEST</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item dropdown">
              <div class="dropdown">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                <%= userData.account.email %>
                </button>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="/profile">Profilo</a></li>

                  <% if (userData.account.isAdmin) { %>
                    <li><a class="dropdown-item" href="/users-management">Gestione utenti</a></li>
                  <% } %>

                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="/logout">Disconnetti</a></li>
                </ul>
              </div>
            </li>
          </ul>
        </div>
    </nav>
</body>
</html>